Algoritmo "semnome"

Var
   letra: caracter

Inicio
   escreva("Digite uma letra: ")
   leia(letra)

   escolha(letra)
   caso "A"
      escreva("Primeira letra do Alfabeto")
   caso "B"
      escreva("Segunda letra do Alfabeto")
   caso "C"
      escreva("Terceira letra do Alfabeto")
   outrocaso
      escreva("Escolha outra letra!")
   fimescolha

Fimalgoritmo